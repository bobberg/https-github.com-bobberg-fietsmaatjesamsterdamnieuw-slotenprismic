{
  "id": "text_block",
  "type": "SharedSlice",
  "name": "TextBlock",
  "description": "Vrijstaand tekstblok met flexibele lay-out",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Vrije tekst met instelbare breedte en uitlijning",
      "imageUrl": "",
      "primary": {
        "body": {
          "type": "StructuredText",
          "config": {
            "label": "Tekst",
            "placeholder": "Voer content in",
            "allowTargetBlank": true,
            "multi": "paragraph,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,list-item,o-list-item,rtl"
          }
        },
        "width": {
          "type": "Select",
          "config": {
            "label": "Breedte",
            "placeholder": "Kies een breedte",
            "options": [
              "narrow",
              "medium",
              "wide",
              "full"
            ],
            "default_value": "medium"
          }
        },
        "alignment": {
          "type": "Select",
          "config": {
            "label": "Uitlijning",
            "placeholder": "Kies een uitlijning",
            "options": [
              "left",
              "center"
            ],
            "default_value": "left"
          }
        },
        "padding": {
          "type": "Select",
          "config": {
            "label": "Verticale marge",
            "placeholder": "Kies de verticale ruimte",
            "options": [
              "none",
              "small",
              "medium",
              "large"
            ],
            "default_value": "medium"
          }
        },
        "background_color": {
          "type": "Select",
          "config": {
            "label": "Achtergrond",
            "placeholder": "Kies een achtergrond",
            "options": [
              "none",
              "secondary",
              "primary"
            ],
            "default_value": "none"
          }
        },
        "min_height": {
          "type": "Number",
          "config": {
            "label": "Minimale hoogte (px)",
            "placeholder": "Bijvoorbeeld 400"
          }
        }
      },
      "items": {}
    }
  ]
}
